{
  "name": "meetup",
  "version": "0.1.0",
  "description": "customize meetup events for lucian",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://www.meetup.com/find/?source=EVENTS&dateRange=this-week&eventType=inPerson&distance=twoMiles"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.meetup.com/find/?source=EVENTS&dateRange=this-week&eventType=inPerson&distance=twoMiles"
      ],
      "js": ["contentScript.js"],
      "css": ["dropdown.css"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.meetup.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "meetup events customize",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
